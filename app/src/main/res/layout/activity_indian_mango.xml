<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonIM"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="293dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Take Picture"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewIM"
        android:layout_width="312dp"
        android:layout_height="362dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_nature" />

    <TextView
        android:id="@+id/classifiedIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewIM"
        android:layout_marginStart="27dp"
        android:layout_marginTop="93dp"
        android:gravity="center"
        android:text="Ripeness:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="468dp"
        android:layout_toEndOf="@+id/classifiedIM"
        android:text=""
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confidencesTextIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/classifiedIM"
        android:layout_marginStart="27dp"
        android:layout_marginTop="33dp"
        android:text="Confidences:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confidenceIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="518dp"
        android:layout_toEndOf="@+id/confidencesTextIM"
        android:gravity="center"
        android:text=""
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SizesIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confidencesTextIM"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Size:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brixlevelsIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SizesIM"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Brix Level:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sizeIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="589dp"
        android:layout_toEndOf="@+id/SizesIM"
        android:gravity="center"
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brixlevelIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="648dp"
        android:layout_toEndOf="@+id/SizesIM"
        android:gravity="center"
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addingbrixIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="634dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Add Brix%" />

</RelativeLayout>