<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonAM"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="293dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Take Picture"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewAM"
        android:layout_width="312dp"
        android:layout_height="362dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_nature" />

    <TextView
        android:id="@+id/classifiedAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewAM"
        android:layout_marginStart="27dp"
        android:layout_marginTop="93dp"
        android:gravity="center"
        android:text="Ripeness:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="468dp"
        android:layout_toEndOf="@+id/classifiedAM"
        android:text=""
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confidenceAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="516dp"
        android:layout_toEndOf="@+id/confidencesTextAM"
        android:gravity="center"
        android:text=""
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sizeAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71sp"
        android:layout_marginTop="589dp"
        android:layout_toEndOf="@+id/SizesAM"
        android:gravity="center"
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brixlevelAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="648dp"
        android:layout_toEndOf="@+id/SizesAM"
        android:gravity="center"
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confidencesTextAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/classifiedAM"
        android:layout_marginStart="27dp"
        android:layout_marginTop="33dp"
        android:text="Confidences:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SizesAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confidencesTextAM"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Size:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brixlevelsAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SizesAM"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Brix Level:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addingbrixAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="634dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Add Brix%" />

</RelativeLayout>