<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonCM"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="293dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Take Picture"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewCM"
        android:layout_width="312dp"
        android:layout_height="362dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_nature" />

    <TextView
        android:id="@+id/classifiedCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewCM"
        android:layout_marginStart="27dp"
        android:layout_marginTop="93dp"
        android:gravity="center"
        android:text="Ripeness:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resultCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="468dp"
        android:layout_toEndOf="@+id/classifiedCM"
        android:text=""
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confidencesTextCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/classifiedCM"
        android:layout_marginStart="27dp"
        android:layout_marginTop="33dp"
        android:text="Confidences:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confidenceCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="518dp"
        android:layout_toEndOf="@+id/confidencesTextCM"
        android:gravity="center"
        android:text=""
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SizesCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confidencesTextCM"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Size:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brixlevelsCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SizesCM"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Brix Level:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sizeCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="589dp"
        android:layout_toEndOf="@+id/SizesCM"
        android:gravity="center"
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brixlevelCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="648dp"
        android:layout_toEndOf="@+id/SizesCM"
        android:gravity="center"
        android:textColor="#29BD00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addingbrixCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="634dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Add Brix%" />

</RelativeLayout>