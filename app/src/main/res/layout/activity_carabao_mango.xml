<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9fff4"
    android:backgroundTint="#F9fff4"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">

    <com.nex3z.notificationbadge.NotificationBadge
        android:id="@+id/badgeCM"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="-20dp"
        android:textSize="16sp"
        android:translationZ="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/RecAndProdCM"
        app:nbAnimationEnabled="true"
        app:nbBackground="@drawable/badge_file"
        app:nbMaxTextLength="3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="272dp"
        android:layout_height="290dp"
        android:layout_marginBottom="260dp"
        android:layout_marginStart="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cm_overlay" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="272dp"
        android:layout_height="290dp"
        android:layout_marginBottom="504dp"
        android:layout_marginEnd="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cm_overlay" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="272dp"
        android:layout_height="290dp"
        android:layout_marginBottom="616dp"
        android:layout_marginStart="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cm_overlay" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="272dp"
        android:layout_height="290dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="648dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cm_overlay" />

    <ImageView
        android:id="@+id/imageViewCM"
        android:layout_width="312dp"
        android:layout_height="312dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/imageviewbordercarabaomango"
        android:src="@drawable/cameraicon"
        app:layout_constraintBottom_toTopOf="@+id/buttonCM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634" />

    <Button
        android:id="@+id/buttonCM"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageViewCM"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Take Picture"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/classifiedCM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addingbrixCM"
        android:layout_width="119dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Add Brix%"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/classifiedCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewCM"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="Ripeness:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/confidencesTextCM"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/confidencesTextCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/classifiedCM"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="32dp"
        android:text="Confidences:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/SizesCM"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SizesCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confidencesTextCM"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="Size:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/brixlevelsCM"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/brixlevelsCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SizesCM"
        android:layout_marginBottom="104dp"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="Brix Level:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/RecAndProdCM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Recipe's &amp; Product's"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>