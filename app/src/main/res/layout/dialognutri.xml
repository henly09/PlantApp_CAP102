<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F9fff4"
    android:backgroundTint="#F9fff4"
    android:id="@+id/linear_dialog"
    >

    <ImageView
        android:id="@+id/dialogdesc"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/logo_mangos_small_reso"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/roboto_black"
        android:text="Nutritional Needs of Family"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:text="A healthy diet is essential for optimum health. Although the phrase is all too commonly known, the idea is less clear. But what exactly is healthy eating? Making the appropriate dietary choices is getting more and harder because of the always-evolving studies and popular diets like vegan, paleo, gluten-free, and keto. But if there's one thing the field's research has shown us, it's that a healthy diet may improve the health and happiness of a family."
        android:justificationMode="inter_word"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:padding="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/okbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="OK"
        app:backgroundTint="@color/bounding_box_color"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginBottom="10dp"/>


</LinearLayout>